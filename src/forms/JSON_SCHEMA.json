{
  "title": "QuickBooks Integration Settings",
  "type": "object",
  "required": ["realmID"],
  "properties": {
    "realmID": {
      "type": "string",
      "title": "QuickBooks Company ID"
    },

    "errorEmail": {
      "type": "string",
      "format": "email",
      "title": "Email in case of error"
    },
    "invoices": {
      "type": "object",
      "title": "Customers",
      "required": ["createCustomersHook"],
      "properties": {
        "createCustomersHook": {
          "type": "boolean",
          "title": "Live Sync Customers from Repzo to QuickBooks",
          "default": false,
          "enum": [true, false]
        },
        "pullCustomers": {
          "type": "boolean",
          "title": "Live Sync Customers from QuickBooks to Repzo ",
          "default": false,
          "enum": [true, false]
        }
      }
    }
  }
}
