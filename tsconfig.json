{
  "compilerOptions": {
    "target": "es2018",
    "module": "ES6",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": { "esm": true },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*", "*test*"]
}
